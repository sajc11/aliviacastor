---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LibraryEdit from '../../components/admin/LibraryEdit';
---
<BaseLayout title="Edit Library | Admin">
  <section class="mx-auto w-full max-w-6xl px-4 py-12 sm:px-6">
    <h1 class="font-display text-3xl font-semibold">Edit Books / DVDs</h1>
